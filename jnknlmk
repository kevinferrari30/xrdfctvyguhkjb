                     <div className="inline-flex items-center gap-3 px-5 py-2 rounded-full bg-blue-50/50 border border-blue-100/50 backdrop-blur shadow-sm">
                        <Activity className="w-6 h-6 text-blue-600 animate-pulse" />
                        <span className="text-blue-800 font-medium text-sm tracking-wide uppercase">Partnership Salute & Benessere</span>
                    </div>

                    <h1 className="text-7xl font-extrabold text-slate-800 leading-[1.1] tracking-tight">
                        Sul lavoro non conta solo <br/>
                        <span className="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-cyan-500 to-blue-600 bg-[length:200%_auto] animate-gradient">
                            quante ore fai.
                        </span>
                    </h1>
                </div>

                {/* RIGHT: CARD & INTERACTION */}
                <div className="col-span-5 relative flex justify-center">
                    
                    {/* Decorative Elements behind card */}
