import React, { useState } from 'react';
import { Activity, Sparkles, MousePointer2 } from 'lucide-react';

const GlassCard = ({ children, className = "" }) => (
  <div 
    className={`backdrop-blur-xl bg-white/40 border border-white/60 shadow-[0_8px_32px_0_rgba(31,38,135,0.15)] rounded-3xl p-8 transition-all duration-500 hover:bg-white/50 hover:scale-[1.02] hover:shadow-[0_15px_40px_0_rgba(31,38,135,0.2)] cursor-default ${className}`}
  >
    {children}
  </div>
);

